<!DOCTYPE html>
<html>

<head>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>


    <meta charset="UTF-8">

    <script>
        function getRandomSpotifyPlaylist() {
            $.get("/api/callApis", (data) => {
                // console.log(data);
                $('#spotify-playlist-tracks').html('')
                $('#spotify-playlist-name').html(data.name);
                for (let track of data.tracks) {
                    $('#spotify-playlist-tracks').append(`<li>${track}</li>`)
                }
            })
        }
    </script>
</head>

<body>

    {{!-- <button onclick="getRandomSpotifyPlaylist()">
        Get random spotify playlist
    </button> --}}

    <div id="spotify-playlist-name">
        {{name}}
    </div>
    <ul id="spotify-playlist-tracks">
        {{#each tracks}}
            <li>{{this}}</li>
        {{/each}}
    </ul>

</body>

</html>